.trade_container {
    width: 1100px;
    margin: 0 auto;
    height: 960px;
    text-align: center;
    &>div {
        float: left;
    }
    .left_side {
        width: 160px;
        height: 100%;
        border-left: 1px solid #CCCCCC;
        border-right: 1px solid #CCCCCC;
        text-align: center;
        overflow: hidden;
        ._tabs {
            width: 100%;
            margin-top: 68px;
            height: 96px;
            &>div {
                width: 100%;
                height: 48px;
                position: relative;
                cursor: pointer;
                p {
                    position: absolute;
                    left: 55px;
                    font-family: MicrosoftYaHei;
                    font-size: 18px;
                    color: #2E86D1;
                    letter-spacing: 0;
                    line-height: 48px;
                }
                img {
                    position: absolute;
                    width: 24px;
                    height: 24px;
                    top: 12px;
                    left: 21px;
                }
                ._active {
                    display: none;
                }
                ._inactive {
                    display: block;
                }
            }
            .active {
                background: #2E86D1;
                p {
                    color: white;
                }
                ._active {
                    display: block;
                }
                ._inactive {
                    display: none;
                }
            }
        }
    }
    .right_side {
        width: 920px;
        height: 100%;
        text-align: center;
    }
}