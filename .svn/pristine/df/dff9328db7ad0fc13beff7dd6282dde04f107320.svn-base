.info_title {
    width: 858px;
    height: 50px;
    border-bottom: 1px solid #CCCCCC;
    margin: 40px 0 80px 40px;
    p {
        font-family: MicrosoftYaHei-Bold;
        font-size: 24px;
        color: #333333;
        text-align: left;
        font-weight: 600;
    }
}

._card {
    width: 858px;
    height: 146px;
    margin: 0 auto;
    position: relative;
    background: #FFFFFF;
    -webkit-box-shadow: 0 2px 8px 0 #CCCCCC;
    box-shadow: 0 2px 8px 0 #CCCCCC;
    table {
        width: 100%;
        height: 100%;
        tr {
            td {
                height: 73px;
                font-family: MicrosoftYaHei;
                font-size: 18px;
                color: #333333;
                text-align: left;
                padding-left: 40px;
            }
        }
        tr:nth-child(1) {
            td:nth-child(1) {
                font-family: MicrosoftYaHei-Bold;
                font-size: 24px;
                color: #333333;
                font-weight: 600;
            }
        }
        tr:nth-child(2) {
            td:nth-child(2) {
                font-family: MicrosoftYaHei-Bold;
                font-size: 24px;
                color: #FF5757;
                font-weight: 600;
            }
        }
    }
}

.but_wrap {
    width: 486px;
    height: 40px;
    position: relative;
    margin: 0 auto;
    margin-top: 80px;
    button {
        background-image: linear-gradient(45deg, #88DCFF 0%, #4EA1FF 100%);
        border: none;
        color: white;
        width: 200px;
        height: 40px;
        outline: none;
        cursor: pointer;
        position: absolute;
    }
    button:active {
        background-image: linear-gradient(45deg, #56b8e0 0%, #2d87ec 100%);
    }
    button:nth-child(1) {
        left: 0;
    }
    button:nth-child(2) {
        right: 0;
        background-image: unset!important;
        background: white;
        border: 1px solid #2E86D1;
        color: #2E86D1;
    }
    button:nth-child(2):active {
        right: 0;
        background: #ececec;
    }
}