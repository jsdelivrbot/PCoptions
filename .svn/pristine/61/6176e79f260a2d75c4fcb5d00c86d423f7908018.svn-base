.recharge {
    width: 100%;
    height: 100%;
    .info_title {
        width: 858px;
        height: 50px;
        border-bottom: 1px solid #CCCCCC;
        margin: 40px 0 40px 40px;
        p {
            font-family: MicrosoftYaHei-Bold;
            font-size: 24px;
            color: #333333;
            text-align: left;
            font-weight: 600;
        }
    }
    .p1 {
        text-align: left;
        font-family: MicrosoftYaHei;
        font-size: 18px;
        color: #333333;
        letter-spacing: 0;
        padding-left: 40px;
    }
    dl {
        dt {
            width: 830px;
            height: 80px;
            border: 1px solid #CCCCCC;
            margin-top: 20px;
            margin-left: 40px;
            text-align: left;
            line-height: 80px;
            font-weight: normal;
            padding-left: 30px;
            img {
                width: 60px;
                height: 40px;
                position: relative;
                top: 13px;
            }
        }
    }
    .input_wrap {
        width: 428px;
        height: 60px;
        margin-top: 40px;
        margin-left: 40px;
        position: relative;
        border: 1px solid #CCCCCC;
        input {
            width: 160px;
            height: 25px;
            border: none;
            background: white;
            margin-top: 18px;
            outline: none;
        }
        p {
            font-family: MicrosoftYaHei;
            font-size: 18px;
            color: #333333;
            letter-spacing: 0;
            position: absolute;
        }
        .p2 {
            left: 20px;
            top: 18px;
        }
        .p3 {
            right: 20px;
            top: 18px;
        }
    }
    .nextStep {
        border: none;
        width: 300px;
        height: 40px;
        outline: none;
        cursor: pointer;
        position: absolute;
        background: white;
        border: 1px solid #2E86D1;
        color: #2E86D1;
        margin-top: 80px;
        margin-left: -140px;
    }
    .nextStep:active {
        background: #ececec;
    }
    .but1 {
        position: relative;
        top: -50px;
        left: 100px;
        .el-dropdown-menu {
            width: 150px!important;
        }
    }
}